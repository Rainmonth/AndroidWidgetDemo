<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.randy.demo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.randy.demo.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.randy.demo.recyclerView.activity.ListTypeRecyclerViewActivity" />
        <activity android:name="com.randy.demo.recyclerView.activity.GridTypeRecyclerViewActivity" />
        <activity android:name="com.randy.demo.recyclerView.activity.StaggeredGridLayoutActivity" />

        <activity android:name="com.randy.demo.viewPager.ViewPagerDemoActivity" />
    </application>

</manifest>